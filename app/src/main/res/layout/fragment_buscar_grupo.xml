<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.grupos.BuscarGrupoFragment" >

    <EditText
        android:id="@+id/etBuscar_BG"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Buscar..."
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btBuscar_BG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        app:layout_constraintBottom_toBottomOf="@+id/etBuscar_BG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etBuscar_BG"
        app:layout_constraintTop_toTopOf="@+id/etBuscar_BG" />

    <ListView
        android:id="@+id/lvGrupos_BG"
        android:layout_width="340dp"
        android:layout_height="630dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBuscar_BG" />

    <TextView
        android:id="@+id/tvAviso_BG"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="[aviso]"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/lvGrupos_BG"
        app:layout_constraintStart_toStartOf="@+id/lvGrupos_BG"
        app:layout_constraintTop_toTopOf="@+id/lvGrupos_BG" />

</androidx.constraintlayout.widget.ConstraintLayout>