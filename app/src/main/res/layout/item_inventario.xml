<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvNombre_IInv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="[nombre]"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btMinus_IInv"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:padding="2dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/tvCant_IInv"
        app:layout_constraintEnd_toStartOf="@+id/tvCant_IInv"
        app:layout_constraintTop_toTopOf="@+id/tvCant_IInv" />

    <TextView
        android:id="@+id/tvCant_IInv"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:padding="2dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/btAdd_IInv"
        app:layout_constraintEnd_toStartOf="@+id/btAdd_IInv"
        app:layout_constraintTop_toTopOf="@+id/btAdd_IInv" />

    <Button
        android:id="@+id/btAdd_IInv"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:padding="2dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/btAgregar_IInv"
        app:layout_constraintEnd_toStartOf="@+id/btAgregar_IInv"
        app:layout_constraintTop_toTopOf="@+id/btAgregar_IInv" />

    <ImageButton
        android:id="@+id/btAgregar_IInv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:backgroundTint="#00BCD4"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_backpack"/>

</androidx.constraintlayout.widget.ConstraintLayout>