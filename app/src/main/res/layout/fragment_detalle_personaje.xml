        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="EXP: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textNivel"
        app:layout_constraintTop_toBottomOf="@+id/textNivel" />

    <TextView
        android:id="@+id/tvExp_DP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Exp]"
        app:layout_constraintBottom_toBottomOf="@+id/textExp"
        app:layout_constraintStart_toEndOf="@+id/textExp" />

    <TextView
