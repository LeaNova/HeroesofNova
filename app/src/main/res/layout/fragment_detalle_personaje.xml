<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.personajes.DetallePersonajeFragment">

    <TextView
        android:id="@+id/tvNombre_DP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Nombre]"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="75dp" />

    <TextView
        android:id="@+id/textRaza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Raza: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline1" />

    <TextView
        android:id="@+id/tvRaza_DP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Raza]"
        app:layout_constraintBottom_toBottomOf="@+id/textRaza"
        app:layout_constraintStart_toEndOf="@+id/textRaza" />

    <TextView
        android:id="@+id/textClase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Clase: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textRaza"
        app:layout_constraintTop_toBottomOf="@+id/textRaza" />

    <TextView
        android:id="@+id/tvClase_DP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Clase]"
        app:layout_constraintBottom_toBottomOf="@+id/textClase"
        app:layout_constraintStart_toEndOf="@+id/textClase" />

    <TextView
        android:id="@+id/textVida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Vida: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textClase"
        app:layout_constraintTop_toBottomOf="@+id/textClase" />

    <TextView
        android:id="@+id/tvVida_DP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Vida]"
