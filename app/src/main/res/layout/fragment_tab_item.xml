<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.personajes.jugar.TabItemFragment">

    <TextView
        android:id="@+id/tvPersonaje_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="[personaje]"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textVida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Vida: "
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPersonaje_JP" />

    <TextView
        android:id="@+id/tvVida_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[vida]"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/textDash1"
        app:layout_constraintEnd_toStartOf="@+id/textDash1" />

    <TextView
        android:id="@+id/textDash1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintEnd_toEndOf="@+id/textVida"
        app:layout_constraintStart_toStartOf="@+id/textVida"
        app:layout_constraintTop_toBottomOf="@+id/textVida" />

    <TextView
        android:id="@+id/tvVidaMax_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[vidaMax]"
        app:layout_constraintBottom_toBottomOf="@+id/textDash1"
        app:layout_constraintStart_toEndOf="@+id/textDash1" />

    <TextView
        android:id="@+id/textEnergia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EnergÃ­a: "
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textVida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline10" />

    <TextView
        android:id="@+id/tvEnergia_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[energia]"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/textDash3"
        app:layout_constraintEnd_toStartOf="@+id/textDash3" />

    <TextView
        android:id="@+id/textDash3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        app:layout_constraintEnd_toEndOf="@+id/textEnergia"
        app:layout_constraintStart_toStartOf="@+id/textEnergia"
        app:layout_constraintTop_toBottomOf="@+id/textEnergia" />

    <TextView
        android:id="@+id/tvEnergiaMax_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[energiaMax]"
        app:layout_constraintBottom_toBottomOf="@+id/textDash3"
        app:layout_constraintStart_toEndOf="@+id/textDash3" />

    <TextView
        android:id="@+id/textConsumible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Consumibles"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDash1" />

    <ListView
        android:id="@+id/lvConsumibles_JP"
        android:layout_width="360dp"
        android:layout_height="480dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textConsumible" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="610dp" />

    <Button
        android:id="@+id/btAgregar_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="205dp" />

</androidx.constraintlayout.widget.ConstraintLayout>