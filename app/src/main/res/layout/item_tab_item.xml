<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvNombre_TabItem"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="[nombre]"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCant_TabItem"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="x99"
        app:layout_constraintBottom_toBottomOf="@+id/tvNombre_TabItem"
        app:layout_constraintStart_toEndOf="@+id/tvNombre_TabItem" />

    <Button
        android:id="@+id/btUsar_TabItem"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:textColor="#000000"
        android:padding="2dp"
        android:text="Usar"
        app:layout_constraintBottom_toBottomOf="@+id/tvNombre_TabItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNombre_TabItem" />

</androidx.constraintlayout.widget.ConstraintLayout>