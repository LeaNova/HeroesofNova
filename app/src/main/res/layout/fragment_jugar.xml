<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.personajes.JugarFragment">

    <TextView
        android:id="@+id/tvPersonaje_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="[personaje]"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textVida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Vida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPersonaje_JP" />

    <ProgressBar
        android:id="@+id/pbVida_JP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="20dp"
        android:progressDrawable="@drawable/style_pb_c1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVida" />

    <TextView
        android:id="@+id/tvVida_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[vida]"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/textDash1"
        app:layout_constraintEnd_toStartOf="@+id/textDash1" />

    <TextView
        android:id="@+id/textDash1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/pbVida_JP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pbVida_JP" />

    <TextView
        android:id="@+id/tvVidaT_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[vidaTop]"
        app:layout_constraintBottom_toBottomOf="@+id/textDash1"
        app:layout_constraintStart_toEndOf="@+id/textDash1" />

    <TextView
        android:id="@+id/textExperiencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Experiencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbVida_JP" />

    <TextView
        android:id="@+id/tvExp_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[exp]"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="@+id/textDash2"
        app:layout_constraintEnd_toStartOf="@+id/textDash2" />

    <TextView
        android:id="@+id/textDash2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textExperiencia" />

    <TextView
        android:id="@+id/tvExpT_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[expTop]"
        app:layout_constraintBottom_toBottomOf="@+id/textDash2"
        app:layout_constraintStart_toEndOf="@+id/textDash2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="330dp" />

    <EditText
        android:id="@+id/etDanio_JP"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Total"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline1" />

    <Button
        android:id="@+id/btDanio_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="DAÃ‘O"
        app:layout_constraintBottom_toBottomOf="@+id/etDanio_JP"
        app:layout_constraintStart_toEndOf="@+id/etDanio_JP"
        app:layout_constraintTop_toTopOf="@+id/etDanio_JP" />

    <Button
        android:id="@+id/btCurar_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Curar"
        app:layout_constraintBottom_toBottomOf="@+id/btDanio_JP"
        app:layout_constraintStart_toEndOf="@+id/btDanio_JP"
        app:layout_constraintTop_toTopOf="@+id/btDanio_JP" />

    <EditText
        android:id="@+id/etExp_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Experiencia"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/rgAtaque_JP"
        app:layout_constraintTop_toBottomOf="@+id/rgAtaque_JP" />

    <Button
        android:id="@+id/btExp_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="EXP"
        app:layout_constraintBottom_toBottomOf="@+id/etExp_JP"
        app:layout_constraintStart_toEndOf="@+id/etExp_JP"
        app:layout_constraintTop_toTopOf="@+id/etExp_JP" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="635dp" />

    <Button
        android:id="@+id/btGuardar_JP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <RadioGroup
        android:id="@+id/rgAtaque_JP"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/etDanio_JP"
        app:layout_constraintTop_toBottomOf="@+id/etDanio_JP">

        <RadioButton
            android:id="@+id/rbAtaqueFisico_JP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Fisico" />

        <RadioButton
            android:id="@+id/rbAtaqueMagico_JP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magico" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>